!!!
%html
  %head
    %title Chrisbim
    = stylesheet_link_tag    "application", :media => "all"
    = stylesheet_link_tag    "style", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #wrapper
      #page
        #logo{:style => "border:solid red 1px; width:350px;float:left;"}
          = link_to image_tag('logo.gif'), root_url
        #login{:style=>"padding:25px;"}
          login or register
        #navbar{:style=>"clear:both;"}

          
        #content
          = yield
          %div{:style=>'clear:both'}          
        #footer
          &copy; Chris Beard Photography 2011
        #dump
          %div{:style => "width:250px"}
            = render :partial => 'layouts/twitter_widget'
            #flickr-slideshow{:style=>"border:solid grey 1px; background:black; width:500px; padding:50px;"}
              <iframe align=center src="http://www.flickr.com/slideShow/index.gne?user_id=56587968@N08" frameBorder=0 width=500 scrolling=no height=500></iframe>
            #flickr-div
            = render :partial => 'layouts/flickr_widget'
          %p
            current user:
            = current_user.inspect      
          %p
            current session:
            = current_user_session.inspect
            - if current_user
              = link_to 'Logout', logout_path
            - else
              = link_to 'Login', login_path
          %p= params.inspect
